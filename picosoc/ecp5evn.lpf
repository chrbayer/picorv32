LOCATE COMP "debug_flash_csb" SITE "B15";
IOBUF PORT "debug_flash_csb" IO_TYPE=LVCMOS25;
# J39.7
LOCATE COMP "debug_flash_clk" SITE "B13";
IOBUF PORT "debug_flash_clk" IO_TYPE=LVCMOS25;
# J39.9
LOCATE COMP "debug_flash_io0" SITE "D11";
IOBUF PORT "debug_flash_io0" IO_TYPE=LVCMOS25;
# J39.11
LOCATE COMP "debug_flash_io1" SITE "B12";
IOBUF PORT "debug_flash_io1" IO_TYPE=LVCMOS25;
# J39.13
LOCATE COMP "debug_flash_io2" SITE "D12";
IOBUF PORT "debug_flash_io2" IO_TYPE=LVCMOS25;
# J39.15
LOCATE COMP "debug_flash_io3" SITE "C13";
IOBUF PORT "debug_flash_io3" IO_TYPE=LVCMOS25;

# Onboard LEDs
