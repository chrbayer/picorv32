
# Pinout for the ECP5-EVN Board

# 12 MHz clock
LOCATE COMP "clk" SITE "A10";
IOBUF PORT "clk" IO_TYPE=LVCMOS33;
LOCATE COMP "rstn" SITE "P4";
IOBUF PORT "rstn" IO_TYPE=LVCMOS33;

LOCATE COMP "flash_csb" SITE "R2";
LOCATE COMP "flash_io0" SITE "W2";
LOCATE COMP "flash_io1" SITE "V2";
LOCATE COMP "flash_io2" SITE "Y2";
LOCATE COMP "flash_io3" SITE "W1";
IOBUF PORT "flash_csb" IO_TYPE=LVCMOS18;
IOBUF PORT "flash_io0" IO_TYPE=LVCMOS18;
IOBUF PORT "flash_io1" IO_TYPE=LVCMOS18;
IOBUF PORT "flash_io2" IO_TYPE=LVCMOS18;
IOBUF PORT "flash_io3" IO_TYPE=LVCMOS18;

# RS232
LOCATE COMP "ser_tx" SITE "P3";
IOBUF PORT "ser_tx" IO_TYPE=LVCMOS33;
LOCATE COMP "ser_rx" SITE "P2";
IOBUF PORT "ser_rx" IO_TYPE=LVCMOS33;


# left on J3
#set_io debug_ser_tx T1
#set_io debug_ser_rx R3

